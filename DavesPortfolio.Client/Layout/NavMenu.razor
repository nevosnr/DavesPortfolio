@implements IDisposable

@inject NavigationManager NavigationManager

<MudDrawer 
    ClipMode="DrawerClipMode.Always" 
    Width="250px" 
    Height="100%"
    Variant="DrawerVariant.Temporary" 
    Elevation="1" 
    Anchor="Anchor.Start">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Select an Option</MudText>
    </MudDrawerHeader>
    <MudDivider DividerType="DividerType.Middle"/>
        <MudNavMenu Color="Color.Primary">
            <MudNavLink Match="NavLinkMatch.All" Href="" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="" Icon="@Icons.Material.Filled.Girl">Python</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/about" Icon="@Icons.Material.Filled.DocumentScanner">David Neve - CV</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="" Icon="@Icons.Material.Filled.Gamepad">Video Game Development</MudNavLink>
            <MudDivider DividerType="DividerType.Middle" />
            <MudNavGroup Title="MOD JHub Scheme Modules">
                <MudNavLink Match="NavLinkMatch.All" Href="/recognise" Icon="@Icons.Material.Filled.AirplanemodeActive">JHub Module 1a - Basic Web</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Href="/richweb" Icon="@Icons.Material.Filled.ListAlt">JHub Module 1b - Rich Web</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
</MudDrawer>



